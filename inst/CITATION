citHeader("To cite foot in publications use:")

citEntry(
  entry    = "Manual",
  title    = "foot: An R package for processing building footprint morphometrics",
  author   = personList(as.person("WorldPop Research Group, University of Southampton")),
  journal  = "PLoS ONE",
  year     = "2021",
  url      = "https://wpgp.github.io/foot/",
  textVersion = paste(
  "WorldPop Research Group, University of Southampton (2021). foot: An R package",
  " for processing building footprint morphometrics.",
  " https://github.com/wpgp/foot, https://wpgp.github.io/foot/."
  )

citEntry(
  entry    = "Article",
  title    = "Tools for mapping multi-scale settlement patterns of building footprints: An introduction to the R package foot",
  author   = personList(as.person("Warren C. Jochem"), as.person("Andrew J. Tatem")),
  journal  = "PLoS ONE",
  year     = "2021",
  volume   = "16",
  number   = "2",
  pages    = "e0247535",
  url      = "https://doi.org/10.1371/journal.pone.0247535",
  textVersion = paste(
  "Jochem, W. C. & Tatem, A. J. (2021). 'Tools for mapping multi-scale settlement",
  " patterns of building footprints: An introduction to the R package foot.'",
  " PLoS ONE 16(2): e0247535. https://doi.org/10.1371/journal.pone.0247535."
  )
)
